# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root                     = true
charset                  = utf-8
trim_trailing_whitespace = true

[*.{mk,Makefile,sh,c,h,re,am,in,lemon}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = tab
tab_width                = 4
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{json,xml,ac}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
trim_trailing_whitespace = true
insert_final_newline     = true
